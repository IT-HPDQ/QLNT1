@model QLNHATHAU.Models.PhongBanValidation

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 id="ModalTitle"></h5>
            <a href="#" class="close" data-dismiss="modal">&times;</a>
        </div>
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDPhongBan)
            <fieldset id="SubmitForm">

                <div class="form-group">
                    <label class="small mb-1" for="inputLastName">Tên viết tắt</label>
                    @Html.EditorFor(model => model.TenVT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenVT, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="small mb-1" for="inputLastName">Tên đầy đủ</label>
                    @Html.EditorFor(model => model.TenDai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDai, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="small mb-1" for="inputLastName">Phòng chức năng</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.PCHN)
                            @Html.ValidationMessageFor(model => model.PCHN, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cập Nhập" class="btn btn-primary" />
                </div>
            </fieldset>

        </div>
    </div>
</div>

}


