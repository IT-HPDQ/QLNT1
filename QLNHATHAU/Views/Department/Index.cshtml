
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using QLNHATHAU.Models
@model PagedList.IPagedList<PhongBanValidation>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" />
@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}
<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-3">

            </div>

            <div class="col-md-6">
                <button type="button" id="btn-add" class="btn btn-primary pull-right"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
                <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","Department")'></div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="countlist">Số lượng: <span>@Model.TotalItemCount</span></div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="table" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th width="20px" class="text-center">STT</th>
                        <th>Tên viết tắt</th>
                        <th>Tên đầy đủ</th>
                        <th width="50px">PCHN</th>
                        <th class="text-center" width="200px">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int pageno = (int)Model.PageNumber;
                        int itemperpage = (int)Model.PageSize;
                        int RowNo = ((pageno - 1) * itemperpage) + 1;
                    }
                    @{

                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"> @RowNo@{RowNo++;}</td>
                                <td class="text-left">@item.TenVT</td>
                                <td class="text-left">@item.TenDai</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.PCHN)</td>
                                <td class="text-center">
                                    <a id="btn-edit_@item.IDPhongBan" href="#" title="Sửa"><i class="fa fa-edit"></i> </a>
                                    <div class="modal fade" id="myModale_@item.IDPhongBan" role="dialog" data-url='@Url.Action("Edit","Department",new { id = item.IDPhongBan })'></div>
                                    <script type="text/javascript">
                                        $('#btn-edit_@item.IDPhongBan').click(function () {
                                            var url = $('#myModale_@item.IDPhongBan').data('url');
                                            $.get(url, function (data) {
                                                $("#myModal").html(data);
                                                $("#ModalTitle").html("Cập nhập nhân viên");
                                                $("#myModal").modal('show');
                                            });
                                        });
                                    </script>
                                    <a href="@Url.Action("Delete", "Department", new { id = item.IDPhongBan })" onclick="return confirm('Bạn muốn xóa bộ phận / nhà máy: @item.TenDai');" title="Xóa"><i class="fa fa-trash"></i></a>
                                </td>



                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="pager">

                @Html.PagedListPager(Model, page => Url.Action("Index", "Department", new { page, MaPB = Request.QueryString["MaPB"] }))
                <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
            </div>
        </div>

    </div>
</div>
@section scripts{
    <script>
        $('#btn-add').click(function () {
            var url = $('#myModal').data('url');
            $.get(url, function (data) {
                $("#myModal").html(data);
                $("#ModalTitle").html("Thêm mới bộ phân / nhà máy");
                $("#myModal").modal('show');
            });
        });
    </script>
}